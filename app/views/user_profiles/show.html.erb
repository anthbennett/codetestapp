	<ul>
		<% @user_profile.user.business_profiles.each do |business| %>
			<li><%= link_to business.name, business %></li>
		<% end %>
	</ul>
</div>
</div>


<p>
  <strong>Name:</strong>
  <%= @user_profile.name %>
</p>

<p>
  <strong>Profile pic:</strong>
  <%= image_tag(@user_profile.profile_pic_url) %>
